 *********************************************/
 int numero_giorni =...;
 int numero_esami =...;
 
 range giorni= 1..numero_giorni;
 range esami = 1..numero_esami;
 
 int distanza_minima_stesso_semestre=...;
 
 dvar boolean x [esami][giorni];
 dvar boolean y [esami][esami];
 dvar int dummy;
 
 minimize dummy;
 
 subject to {
	forall(esame1 in esami, esame2 in esami, giorno1 in giorni, giorno2 in 1..distanza_minima_stesso_semestre+dummy) {
		
	
	x[esame1][giorno1] == true => x[esame1][giorno1]>x[esame2][giorno2]
	
    }
	MinimoDummy: dummy >= 0;
	
}